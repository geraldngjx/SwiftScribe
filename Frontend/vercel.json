{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/main.py" }
  ],
  "env": {
    "FFMPEG_INSTALL": "true"
  },
  "install": {
    "include": ["requirements.txt"],
    "commands": [
      {
        "command": "apt-get install -y ffmpeg",
        "cwd": "/var/task"
      }
    ]
  }
}
