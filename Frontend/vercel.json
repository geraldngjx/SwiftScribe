{
  "version": 2,
  "builds": [
    { "src": "main.py", "use": "@vercel/python" }
  ],
  "functions": {
    "api/main.py": {
      "runtime": "@vercel/python"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "api/main.py" }
  ],
  "env": {
    "FFMPEG_INSTALL": "true"
  },
  "install": [
    {
      "include": ["requirements.txt"]
    },
    {
      "include": ["ffmpeg_install.sh"]
    }
  ]
}
